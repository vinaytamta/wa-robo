{
  "name": "wa-robo",
  "productName": "GroupIQ",
  "version": "1.0.0",
  "description": "GroupIQ - WhatsApp message engagement tracking and analytics platform",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "dev": "nodemon --exec electron . --watch electron --watch src",
    "start:web": "node src/index-gui.js",
    "start:cli": "node src/index.js",
    "scheduled": "node src/scheduler.js",
    "setup-db": "node scripts/setup-database.js",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "USE_HARD_LINKS=false electron-builder --win --x64",
    "build:all": "electron-builder --mac --win",
    "pack": "electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "whatsapp",
    "automation",
    "engagement",
    "analytics",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cookie-parser": "^1.4.7",
    "date-fns": "^3.0.6",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "open": "^9.1.0",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "qrcode-terminal": "^0.12.0",
    "whatsapp-web.js": "^1.34.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "nodemon": "^3.0.2"
  },
  "build": {
    "appId": "com.groupiq.app",
    "productName": "GroupIQ",
    "copyright": "Copyright Â© 2026 GroupIQ",
    "publish": null,
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "src/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg", "zip"],
      "icon": "build/icon.icns"
    },
    "dmg": {
      "title": "GroupIQ Installer",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Utility",
      "icon": "build/icon.png"
    }
  }
}
