# PostgreSQL Configuration (Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wa_robo
DB_USER=wa_robo_user
DB_PASSWORD=wa_robo_password

# WhatsApp Configuration
WA_SESSION_NAME=wa-robo-session
WA_HEADLESS=false  # Set to true for production/scheduled runs

# Scraping Configuration
MESSAGES_LOOKBACK_DAYS=7
MIN_DELAY_MS=2000
MAX_DELAY_MS=8000

# Scheduling (optional - for automated runs)
ENABLE_SCHEDULED_RUNS=false
CRON_SCHEDULE=0 9 * * *  # Daily at 9 AM (cron format)

# Logging
LOG_LEVEL=info  # Options: error, warn, info, debug
